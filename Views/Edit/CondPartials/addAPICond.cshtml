@model APICond;
@using WebApplication1.Models.Edit.ToRender;
@using WebApplication1.Models.ChoiceHelpers;
@using WebApplication1.Controllers;
@using WebApplication1.Models.Edit.ToRender.ListUnits;



<form class="condunit" id="APICondClassForm @Model.APIQualityCondition.id"
      data-condtype="APICond" data-condid="@Model.APIQualityCondition.id">
    <label for="priorityAPI @Model.APIQualityCondition.id @Model.condSetId">Приоритет условия:</label>
    <input type="number" id="priorityAPI @Model.APIQualityCondition.id @Model.condSetId" name="priorityAPI" value="@Model.APIQualityCondition.priority" />
    <label for="isAllowingAPI @Model.APIQualityCondition.id @Model.condSetId">Условие - разрешающее?:</label>

    <input type="checkbox" asp-for="@Model.APIQualityCondition.isAllowing" id="isAllowingAPI @Model.APIQualityCondition.id @Model.condSetId" name="isAllowingAPI" checked="@Model.APIQualityCondition.isAllowing" />

    <label for="MinAPIClass @Model.APIQualityCondition.id @Model.condSetId">Минимальный класс качества:</label>
    <select name="MinAPIClass" asp-for="@Model.APIQualityCondition.MinAPIQualityClassId" id="MinAPIClass @Model.APIQualityCondition.id @Model.condSetId">
        @foreach (var apiclass in Model.APIQualityClasses)
        {
            if (apiclass == Model.APIQualityCondition.MinAPIQualityClass)
            {
                <option value="@apiclass.id" selected>@apiclass.Name</option>
            }
            else
            {
                <option value="@apiclass.id">@apiclass.Name</option>
            }
        }
    </select>

    <input name="condId" value="@Model.APIQualityCondition.id" hidden />
</form>
<button name="delCond" value="@Model.APIQualityCondition.id"
        data-condtype="APICond">
    Удалить условие
</button>