@model WebApplication1.Models.Edit.ToRender.ListUnits.Merch;

<form class="merchForm" id="@Model.Merchandise.id">
    <input name="merchId" value="@Model.Merchandise.id" hidden />

    <h4>Масло(номенклатура) товара</h4>
    <div>
        <select id="oilchoose @Model.Merchandise.id" name="oilchoose" class="merchOpts @Model.Merchandise.id">
            @foreach (var item in Model.MotorOils)
            {
                if (Model.Merchandise.MotorOilId == item.id)
                {
                    <option selected value="@item.id">@item</option>
                }
                else
                {
                    <option value="@item.id">@item</option>
                }
            }
        </select>
    </div>
    <h4>Точка продажи</h4>
    <div>
        <select id="storechoose @Model.Merchandise.id" name="storechoose" class="merchOpts @Model.Merchandise.id">
            @foreach (var item in Model.Stores)
            {
                if (Model.Merchandise.StoreId == item.id)
                {
                    <option selected value="@item.id">@item.Adress (@item.Company.Name)</option>
                }
                else
                {
                    <option value="@item.id">@item.Adress (@item.Company.Name)</option>
                }
            }
        </select>
    </div>
    <h4>Цена:</h4>
    <div>
        <input type="number" name="price" value="@Model.Merchandise.Price" class="merchOpts @Model.Merchandise.id">
    </div>
    <h4>Остаток, шт.:</h4>
    <div>
        <input type="number" name="stockcount" value="@Model.Merchandise.StockCount" class="merchOpts @Model.Merchandise.id">
    </div>
    <input type="button" name="delete" id="del @Model.Merchandise.id" value="Удалить" />
</form>

