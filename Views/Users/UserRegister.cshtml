@using WebApplication1.Controllers;

@section Styles {
    <link rel="stylesheet" href="/css/Home/_Layout.css" />
    <link rel="stylesheet" href="/css/Home/Test.css" />
    <link rel="stylesheet" href="/css/Edit/CommonEditStyle.css" />
}

@section Title {
    Регистрация
}

<div class="center">
    <form asp-action="@nameof(UsersController.GetUserRegister)" method="post"
    class="editUnit subEditUnit">
        <h3>Введите своё имя:</h3>
        <input type="text" name="name" />
        <h3>Придумайте свой логин:</h3>
        <input type="text" name="login" />
        <h3>Придумайте свой пароль:</h3>
        <input type="password" name="password" />
        <div class="paddingUnit"><input class="inpBtn" type="submit" value="Зарегистрироваться" /></div>
        <a asp-action="UserLogin">Уже зарегистрированы?</a>
    </form>
</div>

