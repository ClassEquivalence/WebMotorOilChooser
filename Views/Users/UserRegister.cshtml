@using WebApplication1.Controllers;

@section Styles {
    <link rel="stylesheet" href="/css/Home/_Layout.css" />
    <link rel="stylesheet" href="/css/Home/Test.css" />
}

<div>
    <form asp-action="@nameof(UsersController.GetUserRegister)" method="post">
        <h3>Введите своё имя:</h3>
        <input type="text" name="name" />
        <h3>Придумайте свой логин:</h3>
        <input type="text" name="login" />
        <h3>Придумайте свой пароль:</h3>
        <input type="password" name="password" />
        <input type="submit" value="Зарегистрироваться"/>
    </form>
</div>