@using WebApplication1.Controllers;

@section Styles {
    <link rel="stylesheet" href="/css/Home/_Layout.css" />
    <link rel="stylesheet" href="/css/Home/Test.css" />
    <link rel="stylesheet" href="/css/Edit/CommonEditStyle.css" />
}

<div class="center">
    <form asp-action="@nameof(UsersController.GetUserLogin)" method="post"
    class="editUnit">
        <h3>Введите свой логин:</h3>
        <input type="text" name="login" />
        <h3>Введите пароль:</h3>
        <input type="password" name="password" />
        <div class="paddingUnit"><input class="inpBtn" type="submit" value="Войти" /></div>
        <a asp-action="UserRegister">Ещё не зарегистрированы?</a>
    </form>
</div>

